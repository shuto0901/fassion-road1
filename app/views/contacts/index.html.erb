<div class="container">
<%= form_for @contact, :url => contacts_confirm_path do |f| %>
  <div>
    <h2 class="title">Contact</h2>
  </div>
 
  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @contact.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<table class="table">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td class="text"><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td class="text"><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容<span class="text-danger">（必須）</span></th>
      <td class="text"><%= f.text_area :message %></td>
    </tr>
  </table>
  <div class="text-center contact_box">
  <%= f.submit '確認画面へ', class: 'btn btn-primary contact_btn' %>
  </div>
<% end %>
 </div>