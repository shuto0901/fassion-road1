<div>
  <h2 class="title">Contact Confirm</h2>
</div>
 
<%= form_for @contact, :url => contacts_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th class="labels">名前</th>
      <td class="text">
        <%= f.hidden_field :name %>
        <%= @contact.name %>
      </td>
    </tr>
    <tr>
      <th class="labels">メールアドレス</th>
      <td class="text">
        <%= f.hidden_field :email %>
        <%= @contact.email %>
      </td>
    </tr>
    <tr>
      <th class="labels">お問い合わせ内容</th>
      <td class="text">
        <%= f.hidden_field :message %>
        <%= simple_format(@contact.message) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', :class => 'btn btn-primary pull-right' %>
<% end %>
