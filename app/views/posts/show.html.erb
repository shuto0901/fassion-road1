<h2 class="title">Post Details</h2>

<div class="row">
<div class="col-xs-6">
 <%= attachment_image_tag @post, :post_image, size: '100x100', fallback: "no_image.png", size: "180x100" %>
</div>
<div class="col-xs-6">
  <div class="form-group display-flex">
    <label class="labels">タイトル</label>
     <p class="text"><%= @post.title %></p>
  </div>
  <div class="form-group display-flex">
    <label class="labels">説明</label>
    <p class="text"><%= @post.description %></p>
  </div>
  
  <div id="favorites_buttons_<%= @post.id %>">
    <%= render partial: 'favorites/favorite', locals: { post: @post} %>
  </div>

</div>
</div>

<div class="text-right">
  <%= link_to '編集する', edit_post_path(@post), class: "btn btn-primary" %>
</div>
