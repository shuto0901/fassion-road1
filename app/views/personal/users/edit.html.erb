<h2 class="title">User Edit</h2>
<%= form_with model: @user, url: personal_user_path, local: true do |f| %>

<div class="col-xs-6 display-center">
  <%= f.file_field :profile_image %>
</div>

<div class="col-xs-6">
   <div class="form-group display-flex">
     <%= f.label :name, '名前', class: "labels" %>
     <p class="text"><%= f.text_field :name %></p>
    </div>
    <div class="form-group display-flex">
      <%= f.label :description, '自己紹介', class: "labels" %>
      <p class="text"><%= f.text_area :description %></p>
    </div>
</div>
<div class="actions text-right">
    <%= f.submit '変更を保存', class: 'btn btn-primary' %>
    </div>
<% end %>

