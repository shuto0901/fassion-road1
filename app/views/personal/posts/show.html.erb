<h2 class="title">Post Details</h2>

<div class="row">
<div class="col-xs-6">
 <%= attachment_image_tag @post, :post_image, size: '100x100', fallback: "no_image.png", size: "180x100" %>
</div>
<div class="col-xs-6">
  <div class="form-group display-flex">
    <label class="labels">タイトル</label>
     <p class="text"><%= @post.title %></p>
  </div>
  <div class="form-group display-flex">
    <label class="labels">説明</label>
    <p class="text"><%= @post.description %></p>
  </div>
  
  <% if company_signed_in? %>
  <% if @post.favorited_by?(current_company) %>
  <li class="post_favorite">
  <%= link_to personal_post_favorites_path(@post), method: :delete do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= @post.favorites.count %> いいね
  <% end %>
  </li>
  <% else %>
  <li>
  <%= link_to personal_post_favorites_path(@post), method: :post do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= @post.favorites.count %> いいね
  <% end %>
  </li>
<% end %>
<% elsif user_signed_in? %>
<%= @post.favorites.count %> いいね
<% end %>


</div>
</div>

<div class="text-right">
  <%= link_to '編集する', edit_personal_post_path(@post), class: "btn btn-primary" %>
</div>
